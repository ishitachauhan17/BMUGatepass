<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#2C2C2C"
        android:layout_marginTop="25dp"
        android:text="Approve Gatepass?"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="80dp"
        android:id="@+id/rUserImageView"
        android:layout_gravity="center"
        android:src="@drawable/user_default"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="#2C2C2C"
            android:id="@+id/sName"
            android:text="Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/sBatchT"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#2C2C2C"
            android:text="Batch : " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#2C2C2C"
            android:id="@+id/sBatch"
            android:text="Batch" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/inTimeT"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#2C2C2C"
            android:text="IN Time : " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textColor="#2C2C2C"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:id="@+id/inTime"
            android:text="IN Time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:id="@+id/inDateT"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#2C2C2C"
            android:text="IN Date : " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textColor="#2C2C2C"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:id="@+id/inDate"
            android:text="IN Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textStyle="bold"
            android:textColor="#2C2C2C"
            android:text="OUT Time : " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#2C2C2C"
            android:id="@+id/outTime"
            android:text="OUT Time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#2C2C2C"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="OUT Date : " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#2C2C2C"
            android:id="@+id/outDate"
            android:text="OUT Date" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#2C2C2C"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Visit Place : " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="#2C2C2C"
            android:id="@+id/visitPlace"
            android:text="Visit Place" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#2C2C2C"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:text="Purpose : " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textColor="#2C2C2C"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:id="@+id/visitPurpose"
            android:text="Purpose" />
    </LinearLayout>

    <AutoCompleteTextView
        android:id="@+id/rReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:background="@drawable/dialog_border_new"
        android:hint="No Reason"
        android:padding="10dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_margin="15dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="#FF0000"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:weightSum="2"
        android:layout_marginBottom="25dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/rReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:background="@drawable/dialog_border_new"
            android:clickable="true"
            android:padding="10dp"
            android:text="Reject"
            android:textColor="#000000" />

        <Button
            android:id="@+id/rApprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginLeft="15dp"
            android:background="@drawable/dialog_border_new"
            android:clickable="true"
            android:text="Approve"
            android:textColor="#000000" />
    </LinearLayout>

</LinearLayout>